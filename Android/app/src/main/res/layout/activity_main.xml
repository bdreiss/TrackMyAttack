<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linear_layout_migraine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/button_migraine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD MIGRAINE" />

        <Button
            android:id="@+id/button_causes_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW CAUSES"/>

        <Button
            android:id="@+id/button_symptoms_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW SYMPTOMS"/>

        <Button
            android:id="@+id/button_remedies_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW REMEDIES"/>

        <Button
            android:id="@+id/button_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYNC"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>